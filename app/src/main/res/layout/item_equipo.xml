<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/card_background">

    <!-- Fila para el Nombre del Equipo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nombre_de_equipo"
            android:textStyle="bold"
            android:textColor="@color/azul_general"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txtNombreEquipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dell"
            android:textSize="16sp"
            android:textColor="@color/negro"
            android:layout_marginStart="3dp"/>
    </LinearLayout>

    <!-- Fila para el Tipo de Equipo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de Equipo:"
            android:textStyle="bold"
            android:textColor="@color/azul_general"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txtTipoEquipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computadora"
            android:textSize="16sp"
            android:textColor="@color/negro"
            android:layout_marginStart="3dp"/>
    </LinearLayout>

    <!-- Fila para el Estado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado:"
            android:textStyle="bold"
            android:textColor="@color/azul_general"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txtEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuevo"
            android:textSize="16sp"
            android:textColor="@color/negro"
            android:layout_marginStart="3dp"/>
    </LinearLayout>
</LinearLayout>
