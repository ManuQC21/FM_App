<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.InicioActivity">
    <TextView
        android:id="@+id/tituloPrincipal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/gestion_de_inventario_iestpfm"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/azul_general"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:padding="10dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tituloPrincipal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:id="@+id/contenedorAgregarEquipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:padding="7dp"
                android:background="@drawable/rectangle_background"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/iconoAgregarEquipo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/agregar"
                    android:contentDescription="@string/agregarEquipo"
                    android:layout_marginEnd="10dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tituloAgregarEquipo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/agregar_un_equipo"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/subtituloAgregarEquipo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/aÃ±adir_nuevo_equipo_al_inventario"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/contenedorEliminarEquipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:padding="7dp"
                android:background="@drawable/rectangle_background"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/iconoEliminarEquipo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/eliminar"
                    android:contentDescription="@string/eliminarEquipo"
                    android:layout_marginEnd="10dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tituloEliminarEquipo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/eliminar_un_equipo"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/subtituloEliminarEquipo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/remover_equipo_del_inventario"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/contenedorListarEquipos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:padding="7dp"
                android:background="@drawable/rectangle_background"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/iconoListarEquipos"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/listar"
                    android:contentDescription="@string/listarEquipos"
                    android:layout_marginEnd="10dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tituloListarEquipos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/listar_todos_los_equipos"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/subtituloListarEquipos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ver_lista_completa_de_equipos"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/contenedorModificarEquipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:padding="7dp"
                android:background="@drawable/rectangle_background"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/iconoModificarEquipo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/modificar"
                    android:contentDescription="@string/modificarEquipo"
                    android:layout_marginEnd="10dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tituloModificarEquipo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/modificar_un_equipo"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/subtituloModificarEquipo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/actualizar_datos_de_un_equipo_existente"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/contenedorBuscarEquipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:padding="7dp"
                android:background="@drawable/rectangle_background"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/iconoBuscarEquipo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/buscar"
                    android:contentDescription="@string/buscarEquipo"
                    android:layout_marginEnd="10dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tituloBuscarEquipo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/buscar_equipo_por_codigo"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/subtituloBuscarEquipo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/encuentra_equipos_mediante_su_c_digo_patrimonial"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/contenedorAgregarArticulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:padding="7dp"
                android:background="@drawable/rectangle_background"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/iconoAgregarArticulo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/agregar"
                    android:contentDescription="@string/agregarArticuloAlHistorico"
                    android:layout_marginEnd="10dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tituloAgregarArticulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/agregar_articulos_al_inventario_historico"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/subtituloAgregarArticulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/incorporar_un_nuevo_articulo_al_inventario_historico"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/contenedorListarArticulos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:padding="7dp"
                android:background="@drawable/rectangle_background"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/iconoListarArticulos"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/listar"
                    android:contentDescription="@string/listarArticulos"
                    android:layout_marginEnd="10dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tituloListarArticulos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/listar_todos_los_articulos_de_inventario_historico"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/subtituloListarArticulos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/consulta_la_lista_completa_de_articulos"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/contenedorEscanearCodigoBarras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:padding="7dp"
                android:background="@drawable/rectangle_background"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/iconoEscanearCodigoBarras"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/escanear"
                    android:contentDescription="@string/escanearCodigoBarras"
                    android:layout_marginEnd="10dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tituloEscanearCodigoBarras"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/escanear_codigo_de_barras"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/subtituloEscanearCodigoBarras"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/utiliza_la_camara_para_escanear_codigos"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <ImageView
        android:id="@+id/btnCerrarSesion"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/salir"
        android:contentDescription="@string/cerrarSesion"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true" />
</RelativeLayout>
